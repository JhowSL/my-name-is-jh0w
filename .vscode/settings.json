{
  // Configurações do editor
  "editor.fontSize": 14,
  "editor.lineHeight": 1.8,
  "editor.rulers": [80, 120],
  "editor.parameterHints.enabled": false,
  "editor.renderLineHighlight": "gutter",
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.fontLigatures": true,
  "editor.fontFamily": "JetBrains Mono",
  "editor.tabSize": 2,
  "editor.semanticHighlighting.enabled": false,
  "editor.accessibilitySupport": "off",
  "editor.hideCursorInOverviewRuler": true,
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.quickSuggestions": {
    "strings": "on"
  },
  // Configurações do terminal
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.integrated.gpuAcceleration": "off",
  // Configurações do ambiente de trabalho
  "workbench.startupEditor": "newUntitledFile",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.labelFormat": "short",
  "workbench.colorTheme": "Min Dark",
  "workbench.statusBar.visible": true,
  "window.commandCenter": true,
  // Configurações do explorador de arquivos
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "explorer.sortOrder": "foldersNestsFiles",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": "vite*, pnpm-lock*, bun.lockb, nest*, .prettierrc*, prettierrc*, .eslintrc*, eslintrc*, tsconfig.*",
    "tailwind.config*": "tailwind.config*, postcss.config*",
    ".env.local": ".env*",
    ".env": ".env*"
  },
  // Configurações de git
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "always",
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  // Configurações de sugestões e formatação
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.format.enable": false,
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "eslint.validate": [
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact",
    "graphql"
  ],
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[prisma]": {
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  // Configurações de exclusão de arquivos
  "files.exclude": {
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.hg": true,
    "**/.svn": true
  },
  // Configurações de associações de arquivos
  "files.associations": {
    ".env.*": "dotenv",
    ".prettierrc": "json",
    "*.css": "tailwindcss"
  },
  // Configurações de plugins e temas adicionais
  "extensions.ignoreRecommendations": true,
  "tailwindCSS.includeLanguages": {
    "plaintext": "html, ts, tsx"
  },
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "BUG",
    "OPTIMIZE",
    "HACK",
    "REVIEW",
    "NOTE"
  ],
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check",
      "foreground": "#FF5733"
    },
    "FIXME": {
      "icon": "alert",
      "foreground": "#FF3333"
    },
    "BUG": {
      "icon": "bug",
      "foreground": "#FF5733"
    },
    "OPTIMIZE": {
      "icon": "rocket",
      "foreground": "#33CCFF"
    },
    "HACK": {
      "icon": "zap",
      "foreground": "#FF9900"
    },
    "REVIEW": {
      "icon": "eye",
      "foreground": "#FFCC00"
    },
    "NOTE": {
      "icon": "note",
      "foreground": "#66FF33"
    }
  },
  "sonarlint.connectedMode.project": {
    "connectionId": "-project-impacta",
    "projectKey": "Project-Impacta_frontEnd-site"
  },
  // Configurações do plugin APC
  "apc.font.family": "Inter",
  "apc.stylesheet": {
    ".title-label > h2": "display: none",
    ".editor-actions": "display: none",
    ".nosidebar .inline-tabs-placeholder": "width: 75px",
    ".pane-header": "padding: 0 8px",
    ".pane-body": "padding: 8px",
    ".split-view-view:first-child .pane-header": "display: none !important;",
    ".monaco-list-row": "border-radius: 4px;",
    ".monaco-workbench .monaco-list:not(.element-focused):focus:before": "display: none;"
  },
  "cSpell.words": ["nextauth"],
  "cSpell.language": "en,pt,pt-BR"
}

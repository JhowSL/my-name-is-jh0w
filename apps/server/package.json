{
  "name": "@repo/server",
  "version": "1.0.0",
  "description": "Backend server for the repo",
  "exports": {
    ".": "./index.ts"
  },
  "author": "Jh0w",
  "scripts": {
    "clean": "rm -rf .turbo node_modules build dist",
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "start:test": "NODE_ENV=test ts-node-dev src/index.ts",
    "start": "node ./dist/index.js",
    "docker:build:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:build:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "build": "dotenv -e .env tsup src",
    "format": "biome format --write .",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "@repo/db": "workspace:*",
    "@trpc/client": "11.0.0-rc.439",
    "@trpc/server": "11.0.0-rc.439",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.11",
    "dotenv-cli": "^7.4.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsup": "8.2.4",
    "tsx": "4.17.0",
    "typescript": "^5.5.3"
  }
}

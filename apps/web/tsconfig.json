{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"next.config.mjs",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"tailwind.config.js",
		"postcss.config.js"
	],
	"exclude": ["node_modules"],
	"paths": {
		"@repo/server": ["../server/index"],
		"@repo/ui": ["../../packages/ui/components/*"]
	}
}

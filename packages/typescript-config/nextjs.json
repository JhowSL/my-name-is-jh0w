{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noEmit": true,
    "paths": {
      "@ui/*": ["../../packages/ui/*"],
      "@ui/components/ui": ["../../packages/ui/components/ui*"],
      "@ui/components/ui/*": ["../../packages/ui/components/ui/*"]
    }
  }
}

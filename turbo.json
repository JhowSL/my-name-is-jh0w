{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "outputs": [".next/**", "!.next/cache/**", "next-env.d.ts"],
      "env": [
        "NEXT_PUBLIC_GITHUB_PROFILE_URL",
        "NEXT_PUBLIC_LINKEDIN_PROFILE_URL",
        "NEXT_PUBLIC_TRPC_URL",
        "NEXT_PUBLIC_PROFILE_IMAGE_URL",
        "PORT_BACK",
        "DATABASE_URL"
      ]
    },
    "lint": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "test": {},
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },

    "start": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    }
  }
}
